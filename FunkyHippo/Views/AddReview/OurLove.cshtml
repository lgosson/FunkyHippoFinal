@model IEnumerable<FunkyHippo.Models.Review>

@{
    ViewBag.Title = "Caribou - Our Love";
}

<h2>Caribou - Our Love</h2>


    <h3 style ="float:left;">Overall Rating   </h3> <br /> 
    <h2 style="float:left;"> @ViewBag.Aggrate</h2>

    <img style="float:right; width:350px; height:350px;" src="~/Media/ourlove.jpg" />


<table class="table"> 
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
              
            </td>
        </tr>
    }

</table>

